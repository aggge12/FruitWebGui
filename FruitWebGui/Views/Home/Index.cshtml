@using FruitWebGui.Models;

@{
    ViewBag.Title = "Index";

}
<h2 style="text-align:center">FruitShop!</h2>

<div class="col-sm-10 col-sm-offset-2">

    <br />
    <div class="col-sm-8">
        <div class="col-sm-12"><div class="col-sm-12">Fruit</div></div>
        @foreach (Fruit f in ViewBag.Fruits)
        {
            <div class="col-sm-12" style="margin: 15px 15px 15px 15px; border: 1px solid black; float:left;">
                <div class="col-sm-6 RemoveSpace">
                    <div class="col-sm-12 RemoveSpace"><div class="col-sm-12 RemoveSpace">@Html.Raw(f.Name)</div> <div class="col-sm-6 RemoveSpace">Price : @Html.Raw(f.price)</div></div>
                </div>
                <button style="margin-top:5px; margin-bottom:5px; float:right;" class="col-sm-3" type="submit" onclick="location.href='@Url.Action("AddItem", "Home", new { fruitID = f.id, Amount = 1 })'">Add to Cart</button>
            </div>
        }
    </div>
</div>